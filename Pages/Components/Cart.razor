@inject CounterModel CounterModel

<MudItem Class="mt-2">
  <MudIcon  Icon="@Icons.Filled.ShoppingCartCheckout"  Class="cursor-pointer" Style="font-size: 2rem;"/>
  <MudChip Class="mt-n5">@CounterModel.Counter</MudChip>
</MudItem>


 
@code {

  public void CounterChanged()
  {
    StateHasChanged();
  }
  protected override void OnInitialized()
  {
    CounterModel.CounterHasChanged += CounterChanged;
  }
    

}